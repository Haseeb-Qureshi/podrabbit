<div class="container">
  <div class="jumbotron">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Podcast</th>
          <th>Episode</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @episode.each do |episode| %>
        <tr>
          <td><%= episode.podcast.name %></td>
          <td><%= episode.name %></td>
          <td><%= episode.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <h2><%= link_to "Add new podcast", new_podcast_path, class: "btn btn-info" %></h2>
  </div>
</div>
